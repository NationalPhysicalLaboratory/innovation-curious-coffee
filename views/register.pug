extends layout

block content
    div(class='container center-div')
        h1(class='text-center')
            img(src='icons/coffee.svg' width='50' height='50' class='rotate')
            = 'Register'
        
        form(class='form-horizontal' method='POST', action='/register' role='form')
            div(class='form-group form-row align-items-center')
                div(class='col-sm-2')
                label(class='control-label col-sm-2 text-right' for='name') Name:
                div(class='col-sm-4')
                    input#name(class='form-control custom-form-control' type='text', placeholder='name', name='name' value=undefined===name ? '' : name)
                div(class='col-sm-4 text-left')
                    if name_error
                        for error in errors
                            if error.param == 'name'
                                    span= error.msg
            
            div(class='form-group form-row align-items-center')
                div(class='col-sm-2')
                label(for='email' class='control-label col-sm-2 text-right') Email: 
                div(class='col-sm-4')
                    input#email(class='form-control custom-form-control' type='text', placeholder='email', name='email' value=undefined===email ? '' : email)
                div(class='col-sm-4 text-left')
                    if email_error
                        for error in errors
                            if error.param == 'email'
                                    span= error.msg
            
            div(class='form-group form-row align-items-center')
                div(class='col-sm-2')
                label(for='department' class='control-label col-sm-2 text-right') Department: 
                div(class='col-sm-4')
                    select#department(class='form-control custom-form-control' name='department')
                        option(value='--choose a department--')= "--choose a department--"
                        option(value='Procurement' selected= department == 'Procurement')= "Procurement"
                        option(value='Finance' selected= deparment == 'Finance')= "Finance"
                        option(value='Finance LFP' selected= department == 'Finance LFP')= "Finance LFP"
                        option(value='Building Services' selected= department == 'Building Services')= "Building Services"
                        option(value='HR' selected= department == 'HR')= "HR"
                        option(value='P3' selected= department == 'P3')= "P3"
                        option(value='Strategy & Policy' selected= department == 'Strategy & Policy')= "Strategy & Policy"
                        option(value='Communications Team' selected= department == 'Communications Team')= "Communications Team"
                        option(value='Directors & Support' selected= department == 'Directors & Support')= "Directors & Support"
                        option(value='Legal Services' selected= department == 'Legal Services')= "Legal Services"
                        option(value='Systems Development Back End' selected= department == 'Systems Development Back End')= "Systems Development Back End"
                        option(value='Business & Systems Analysts' selected= department == 'Business & Systems Analysts')= "Business & Systems Analysts"
                        option(value='Software Management' selected= department == 'Software Management')= "Software Management"
                        option(value='Technical Ops Management' selected= department == 'Technical Ops Management')= "Technical Ops Management"
                        option(value='Systems Development Front End' selected= department == 'Systems Development Front End')= "Systems Development Front End"
                        option(value='BSD Dept Heads' selected= department == 'BSD Dept Heads')= "BSD Dept Heads"
                        option(value='Product' selected= department == 'Product')= "Product"
                        option(value='Register Integrity' selected= department == 'Register Integrity')= "Register Integrity"
                        option(value='CDS' selected= department == 'CDS')= "CDS"
                        option(value='London Office' selected= department == 'London Office')= "London Office"
                        option(value='Edinburgh Office' selected= department == 'Edinburgh Office')= "Edinburgh Office"
                        option(value='LFP Edinburgh' selected= department == 'LFP Edinburgh')= "LFP Edinburgh"
                        option(value='Belfast Office' selected= department == 'Belfast Office')= "Belfast Office"
                        option(value='LFP Belfast' selected= department == 'LFP Belfast')= "LFP Belfast"
                        option(value='COT and Company Support' selected= department == 'COT and Company Support')= "COT and Company Support" 
                        option(value='CPES' selected= department == 'CPES')= "CPES"
                        option(value='Customer Services' selected= department == 'Customer Services')= "Customer Services"
                        option(value='LFP' selected= department == 'LFP')= "LFP"
                        option(value='Analysis & Corporate Insight' selected= department == 'Analysis & Corporate Insight')= "Analysis & Corporate Insight"
                div(class='col-sm-4 text-left')
                    if department_error
                        for error in errors
                            if error.param == 'department'
                                    span= error.msg

            div(class='form-group form-row align-items-center')
                div(class='col-sm-2')
                div(class='col-sm-8')
                    div(class='alert alert-warning', role='alert')
                        span 
                            | Please check the box below if you would like to be repeatedly matched.
                            | If you don't check this box, you will have to re-register if you'd like to be
                            | matched again.

            div(class='form-group form-row align-items-center')
                div(class='col-sm-2')
                label(for='repeat' class='control-label col-sm-2 text-right') Repeated matches:
                div(class='checkbox')
                    input#repeat(type='checkbox' class='custom-checkbox' name='repeat')
            
            div(class='form-group form-row align-items-center')
                div(class='col-sm-4')
                div(class='col-sm-2')
                    button(class='btn btn-primary custom-button' type='submit') Register

            span#name_error(hidden)= name_error
            span#email_error(hidden)= email_error
            span#department_error(hidden)= department_error

    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/error-register.js')

        
